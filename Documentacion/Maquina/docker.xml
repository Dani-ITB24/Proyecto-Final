
FROM ubuntu:20.04

<!--- Poner informacion version, nombre----->
LABEL maintainer=" 123@gmail.com"
LABEL version="0.1"

<!--- Actualiza los paquetes o poner nuevos----->
RUN apt-get update
RUN apt upgrade -y

  
<!---(Instalar aplicaciones adicionales)----->
 RUN apt-get install -y apache2
 RUN apt-get install mariadb-server

<!---(Exponer puertos)----->
 EXPOSE 80 443

<!---(Copiar archivos o directorios desde el host al contenedor)----->
COPY /ruta/del/origen /ruta/destino
