# Utiliza la imagen base
FROM injection:v1

# Instala los paquetes necesarios para los servicios
RUN apt-get update && \
    apt-get install -y mariadb-server apache2 openssh-server

# Configura los servicios para que se inicien autom√°ticamente al iniciar el contenedor
RUN systemctl enable mariadb && \
    systemctl enable apache2 && \
    systemctl enable ssh

# Define el comando de inicio del contenedor
CMD ["bash", "-c", "service mariadb start && service apache2 start && service ssh start && tail -f /dev/null"]
